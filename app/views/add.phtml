<h1>Add a record</h1>

<p>
<form action="" method="">


    <table>
      <tr>
        <td class="right">Title</td>
        <td class="left"><input name="title" type="text" size="40" /></td>
      </tr>

      <tr>
        <td class="right">Artist</td>
        <td class="left"><input name="artist" type="text" size="40" /></td>
      </tr>

      <tr>
        <td class="right">Year</td>
        <td class="left"><input name="year" type="text" size="40" /></td>
      </tr>

      <tr>
        <td class="right">Type</td>
        <td class="left"><select>
            <option>Album</option>
            <option>Single</option>
            <option>etc</option>
        </select></td>
      </tr>

      <tr>
        <td class="right">Format</td>
        <td class="left"><select>
            <option>CD</option>
            <option>2CD</option>
            <option>DVD</option>
        </select></td>
      </tr>

      <tr>
        <td class="right">Case</td>
        <td class="left"><select>
            <option>something</option>
            <option>here</option>
            <option>etc</option>
        </select></td>
      </tr>

      <tr>
        <td class="right">
          Annotation<br />
          (optional)
        </td>
        <td class="left">
          <textarea rows="4" cols="38"></textarea>
        </td>
      </tr>

    </table>

    <br />
    <input class="button" name="submit" type="submit" value="Save" /> 
    <input class="button" name="cancel" type="reset" value="Cancel" />

  </form>
  </p>
